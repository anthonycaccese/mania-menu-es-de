<theme>
   <include>./../theme.xml</include>
   <view name="system">
      <carousel name="carousel">
         <text>Now Playing</text>
      </carousel>
      <gameselector name="selector-lastplayed">
         <selection>lastplayed</selection>
      </gameselector>
   </view>
   <variant name="backgroundArtScreenshot,backgroundArtFanart">
      <view name="system">
         <image name="background-art">
            <gameselector>selector-lastplayed</gameselector>
         </image>
      </view>
   </variant>
   <variant name="backgroundArtVideo">
      <view name="system">
         <video name="background-art">
            <gameselector>selector-lastplayed</gameselector>
         </video>
      </view>
   </variant>
   <view name="gamelist">
      <text name="custom-collection-name">
         <text>Now Playing</text>
      </text>
   </view>
</theme>